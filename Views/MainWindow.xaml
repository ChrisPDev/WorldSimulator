<Window x:Class="WorldSimulator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldSimulator.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <StackPanel
            x:Name="TestButtonsSP"
            Grid.Column="1"
            Grid.Row="1"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Width="350">

            <Button
                x:Name="TestButton"
                Content="Test"
                Padding="10"
                FontFamily="Tahoma"
                FontSize="25"
                FontWeight="Bold"
                Command="{Binding CreateTestDataCommand}"/>

            <ComboBox
                x:Name="TestComboBoxCB"
                Width="350"
                Height="50"
                FontFamily="Tahoma"
                FontSize="18"
                FontWeight="Bold"
                Margin="0,10,0,0"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ItemsSource="{Binding Elements}"
                DisplayMemberPath="Name"
                SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}">

            </ComboBox>

            <TextBlock
                Text="Simulation Details"
                FontFamily="Tahoma"
                FontSize="20"
                FontWeight="Bold"
                Margin="0,10,0,10"
                TextAlignment="Center"/>

            <TextBlock
                Text="{Binding CurrentSimYear, StringFormat=Simulation Year: {0}}"
                FontFamily="Tahoma"
                FontSize="14"
                FontWeight="Bold"
                Margin="0,10,0,10"
                HorizontalAlignment="Center"/>

            <TextBlock
                Text="Plant Details"
                FontFamily="Tahoma"
                FontSize="20"
                FontWeight="Bold"
                Margin="0,10,0,10"
                TextAlignment="Center"/>

            <StackPanel
                Orientation="Horizontal"
                Margin="0,20,0,0"
                HorizontalAlignment="Center">
                <TextBlock
                    Text="Name: "
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
                <TextBlock
                    Text="{Binding SelectedPlantName, Mode=OneWay}"
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Margin="0,20,0,0"                
                HorizontalAlignment="Center">
                <TextBlock
                    Text="Type: "
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
                <TextBlock
                    Text="{Binding SelectedPlantType, Mode=OneWay}"
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Margin="0,20,0,0"
                HorizontalAlignment="Center">
                <TextBlock
                    Text="Produce: "
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
                <TextBlock
                    Text="{Binding SelectedPlantProduce, Mode=OneWay}"
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Margin="0,20,0,0"
                HorizontalAlignment="Center">
                <TextBlock
                    Text="Age: "
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
                <TextBlock
                    Text="{Binding SelectedPlantAge, Mode=OneWay}"
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Margin="0,20,0,0"
                HorizontalAlignment="Center">
                <TextBlock
                    Text="Lifespan: "
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
                <TextBlock
                    Text="{Binding SelectedPlantLifespan, Mode=OneWay}"
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal"
                Margin="0,20,0,0"
                HorizontalAlignment="Center">
                <TextBlock
                    Text="Stage: "
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
                <TextBlock
                    Text="{Binding SelectedPlantStage, Mode=OneWay}"
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
            </StackPanel>
            <StackPanel
                x:Name="CellDetailsSP"
                Margin="0,20,0,0"
                HorizontalAlignment="Center">

                <TextBlock
                    Text="Selected Cell Info"
                    FontFamily="Tahoma"
                    FontSize="20"
                    FontWeight="Bold"
                    Margin="0,10,0,10"
                    TextAlignment="Center"/>
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
                    
                    <TextBlock
                        Text="Map X, Y: "
                        FontWeight="Bold"
                        FontFamily="Tahoma"
                        FontSize="14"/>
                    
                    <TextBlock
                        Text="{Binding SelectedCellDisplay}"
                        FontFamily="Tahoma"
                        FontSize="14"/>
                </StackPanel>

                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
                    
                    <TextBlock 
                        Text="Chunk X, Y: "
                        FontWeight="Bold"
                        FontFamily="Tahoma"
                        FontSize="14"/>

                    <TextBlock
                        Text="{Binding SelectedChunkDisplay}"
                        FontFamily="Tahoma"
                        FontSize="14"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <local:MapView
            x:Name="MapViewControl"
            Grid.Column="2"
            Grid.Row="1"
            Margin="10"/>

        <ScrollViewer
            x:Name="GrowthLogScrollViewer"
            Grid.Column="3"
            Grid.Row="1"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled"
            Margin="10"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch">

            <ItemsControl
                ItemsSource="{Binding GrowthLogMessages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Text="{Binding}"
                            FontFamily="Tahoma"
                            FontSize="14"
                            FontWeight="Normal"
                            Margin="2"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>

