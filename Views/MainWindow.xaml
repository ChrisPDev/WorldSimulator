<Window x:Class="WorldSimulator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldSimulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <StackPanel
            x:Name="TestButtonsSP"
            Grid.Column="1"
            Grid.Row="1"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Width="350">

            <Button
                x:Name="TestButton"
                Content="Test"
                Padding="10"
                FontFamily="Tahoma"
                FontSize="25"
                FontWeight="Bold"
                Command="{Binding CreateTestDataCommand}"/>

            <ComboBox
                x:Name="TestComboBoxCB"
                Width="350"
                Height="50"
                FontFamily="Tahoma"
                FontSize="18"
                FontWeight="Bold"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ItemsSource="{Binding Elements}"
                DisplayMemberPath="Name"
                SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}">

            </ComboBox>

            <TextBlock
                Text="{Binding CurrentSimYear, StringFormat=Simulation Year: {0}}"
                FontFamily="Tahoma"
                FontSize="14"
                FontWeight="Bold"/>

            <StackPanel
                Orientation="Horizontal">
                <TextBlock
                    Text="Name: "
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
                <TextBlock
                    Text="{Binding SelectedPlantName, Mode=OneWay}"
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal">
                <TextBlock
                    Text="Type: "
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
                <TextBlock
                    Text="{Binding SelectedPlantType, Mode=OneWay}"
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal">
                <TextBlock
                    Text="Produce: "
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
                <TextBlock
                    Text="{Binding SelectedPlantProduce, Mode=OneWay}"
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal">
                <TextBlock
                    Text="Age: "
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
                <TextBlock
                    Text="{Binding SelectedPlantAge, Mode=OneWay}"
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal">
                <TextBlock
                    Text="Lifespan: "
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
                <TextBlock
                    Text="{Binding SelectedPlantLifespan, Mode=OneWay}"
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
            </StackPanel>
            <StackPanel
                Orientation="Horizontal">
                <TextBlock
                    Text="Stage: "
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
                <TextBlock
                    Text="{Binding SelectedPlantStage, Mode=OneWay}"
                    FontFamily="Tahoma"
                    FontSize="14"
                    FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer
            x:Name="GrowthLogScrollViewer"
            Grid.Column="2"
            Grid.Row="1"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled"
            Margin="10"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch">

            <ItemsControl
                ItemsSource="{Binding GrowthLogMessages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Text="{Binding}"
                            FontFamily="Tahoma"
                            FontSize="14"
                            FontWeight="Normal"
                            Margin="2"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>

